@page "/blog/{Slug}"
@model Letterbook.Docs.Page
@inject MarkdownPages Markdown

@implements IRenderStatic<Letterbook.Docs.Page>
@functions {
    public List<Page> GetStaticProps(RenderContext ctx) =>
        ctx.Resolve<MarkdownPages>().GetVisiblePages("blog").Map(page => new Page { Slug = page.Slug.RightPart('/') });
}

@await Html.PartialAsync("DocsPage", new Shared.DocsPage {
   Slug = Model.Slug,
   Folder = "blog",
   DefaultMenu = new MarkdownMenu {
       Icon = Markdown.DefaultMenuIcon,
       Text = "Blog",
       Link = "/blog/",
   },
}.Init(this, Markdown))
