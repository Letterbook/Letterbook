@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage<TModel>

@{
ViewData["Brand"] = "Letterbook Project";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="color-scheme" content="light dark">
    <meta property="og:title" content="@(ViewData["Title"] ?? "Docs")" />
    <meta property="og:site_name" content="Letterbook" />
    <meta property="og:type" content="@(ViewData["OgType"] ?? "website")" />
    <meta property="og:url" content="@("https://letterbook.com" + ViewData["OgUrl"] ?? "")" />
    <meta property="og:image" content="@(ViewData["OgImage"] ?? "https://letterbook.com/img/letterbook-social.png")" />
    <link rel="icon" type="image/svg" href="/img/letterbook.svg">
    <link rel="stylesheet" href="/lib/picocss/css/pico.min.css"/>
    <link rel="stylesheet" href="/css/site.css"/>
    <title>Letterbook | @(ViewData["Title"] ?? "Docs")</title>
    @await RenderSectionAsync("Head", required: false)
</head>
<body class="container">
@await Html.PartialAsync("Nav")

<main role="main" class="@(IsSectionDefined("Sidebar") ? "sidebar-grid" : null)">
    @await RenderSectionAsync("Sidebar", required: false)
    @RenderBody()
</main>

@await Html.PartialAsync("Footer")

@await RenderSectionAsync("Scripts", required: false)
<script src="/lib/mermaid/dist/mermaid.min.js" type="text/javascript"></script>
<script src="/js/mermaid-config.js" type="text/javascript"></script>

</body>
</html>