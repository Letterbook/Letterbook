<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] | Letterbook</title>
    <link rel="icon" type="image/svg" href="/img/letterbook-square.svg">
    <link rel="stylesheet" href="/lib/picocss/css/pico.min.css"/>
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true"/>
</head>
<body class="container">
<header>
    <nav>
        <h1 class="letterbook-brand"><a asp-page="/Index">Letterbook</a></h1>
        <ul>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <li>
                    <partial name="_ProfileSelector"/>
                </li>
                <li><a asp-area="" asp-page="/Notifications">Notifications</a></li>
                <li><a asp-area="" asp-page="/Search">Search</a></li>
                <li><a asp-area="" asp-page="/Settings">Settings</a></li>
            }
            else
            {
                <li>
                    <partial name="_LoginPartial"/>
                </li>
            }
            <li></li>
            <li><a asp-page="Profile" asp-route-handle="admin">Admin profile</a></li>
        </ul>
    </nav>
</header>
<section class="sidebar">
    @await RenderSectionAsync("Sidebar", required: false)
</section>
<main role="main">
    @RenderBody()
</main>
<footer>
    <span>Powered by <a href="https://letterbook.com">Letterbook</a> v0.0</span>
    <ul>
        <li><a asp-area="" asp-page="/About">About</a></li>
        <li><a asp-area="" asp-page="/Moderation">Moderation policy</a></li>
        <li><a asp-area="" asp-page="/Privacy">Privacy policy</a></li>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <li>
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                      asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                    <button id="logout" type="submit" class="btn-link color-secondary">Logout</button>
                </form>
            </li>
        }
    </ul>
</footer>

<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>