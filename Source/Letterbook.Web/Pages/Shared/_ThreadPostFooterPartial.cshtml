@using Letterbook.Web.Tags
@model Letterbook.Core.Models.Post

<button class="outline" disabled>
    <app-icon type=@Icon.Like/>
    <span class="min-lg"> like</span></button>
<button class="outline" disabled>
    <app-icon type=@Icon.Share/>
    <span class="min-lg"> share</span></button>
<a asp-page="Thread" asp-route-postId="@Model.Id">
<button class="outline">
    <app-icon type=@Icon.Thread/>
    <span class="min-lg"> open</span></button>
</a>
<span class="spacer"></span>
<a asp-page="Thread" asp-route-postId="@Model.Id">
<time
    datetime="@((Model.UpdatedDate ?? Model.CreatedDate).ToString("r"))">@((Model.UpdatedDate ?? Model.CreatedDate).ToString("MMM\u00A0d h:mm\u00A0tt"))</time>
</a>
<button class="outline">
    <app-icon type=@Icon.More/>
</button>
