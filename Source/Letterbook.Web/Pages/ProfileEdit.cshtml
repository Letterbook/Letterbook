@page "/@{handle}/edit"
@model Letterbook.Web.Pages.ProfileEdit

@{
    ViewData["title"] = $"Edit {Model.Handle}";
}

<div>
    <h1>Edit @@@Model.Handle</h1>

    <form method="post" asp-route-handle="@Model.Handle">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="DisplayName"></label>
            <input type="text" asp-for="DisplayName" />
            <span asp-validation-for="DisplayName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description"></textarea>
            <span asp-validation-for="Description"></span>
        </div>
        <button>Update</button>
    </form>
</div>